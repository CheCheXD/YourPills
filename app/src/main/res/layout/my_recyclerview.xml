<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainLayout">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginBottom="12dp"
        android:layout_height="90dp"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="66dp"
        tools:ignore="MissingConstraints" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/comprimido_id_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="@color/black"
                android:textSize="40sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="-2dp"
                tools:layout_editor_absoluteY="0dp" />

            <TextView
                android:id="@+id/name_comp_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="3dp"
                android:text="Nome do Comprimido"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/comprimido_id_txt"
                app:layout_constraintTop_toTopOf="@+id/comprimido_id_txt" />

            <TextView
                android:id="@+id/emb_comp_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Embalagens"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="@+id/name_comp_txt"
                app:layout_constraintTop_toBottomOf="@+id/name_comp_txt" />

            <TextView
                android:id="@+id/med_comp_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="5dp"
                android:text="Medicamentos"
                android:textColor="@color/black"
                app:layout_constraintStart_toEndOf="@+id/emb_comp_txt"
                app:layout_constraintTop_toBottomOf="@+id/name_comp_txt" />

            <TextView
                android:id="@+id/mil_comp_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="5dp"
                android:text="Miligramas"
                android:textColor="@color/black"
                app:layout_constraintStart_toEndOf="@+id/med_comp_txt"
                app:layout_constraintTop_toBottomOf="@+id/name_comp_txt" />

            <TextView
                android:id="@+id/date_comp_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="5dp"
                android:text="Data de Validade"
                android:textColor="@color/black"
                app:layout_constraintStart_toEndOf="@+id/mil_comp_txt"
                app:layout_constraintTop_toBottomOf="@+id/name_comp_txt" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>